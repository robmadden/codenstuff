{{!< default}}

{{> nav}}

<section class="blog-header" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
  <div class="wrapper">
    <div class="js-animate non-visible animated" data-animate="zoomIn">
      <h1 class="blog-title">{{@blog.title}}</h1>
      <div class="blog-description">{{@blog.description}}</div>
    </div>
  </div>
  <div class="page-tag">
    <h1>All Posts Under: <span>{{tag.name}}</span></h1>
  </div>
</section>

<section class="posts">
  <div class="container">
    {{! Each post will be output using this markup }}
    {{#foreach posts}}
      <article class="{{post_class}} non-visible js-animate animated" data-animate="fadeInDown">
        <div class="row">
          <div class="col-xs-12 col-sm-2 post-meta">
            <div class="datetime">
              <div class="day">{{date format='DD'}}</div>
              <div class="month-year">{{date format='MMM YYYY'}}</div>
            </div>
          </div>
          <div class="col-xs-12 col-sm-10">
            <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
            <div class="post-excerpt">
                {{excerpt words="60"}}&hellip;
            </div>
            <div class="post-author">
              <img src="{{author.image}}" alt="{{author.name}}"/>
              <span class="post-author-name">{{author}}</span>
              {{#if tags}}
                <span class="fa fa-tags post-tags"></span>
                {{tags separator=" &bull; "}}
              {{/if}}
            </div>
            <div class="post-more">
              <a class="read-more" href="{{url}}">Continue Read</a>
            </div>
          </div>
        </div>
      </article>
    {{/foreach}}
  </div>
</section>

<section class="posts-pagination">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        {{!! After all the posts, we have the previous/next pagination links }}
        {{pagination}}
      </div>
    </div>
  </div>
</section>
