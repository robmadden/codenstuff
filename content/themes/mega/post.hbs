{{!< default}}

{{> nav}}

{{#post}}

  <div class="blog-header" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
    <div class="wrapper">
      <div class="js-animate non-visible animated" data-animate="zoomIn">
        <h2 class="post-title">{{title}}</h2>
        <div class="post-meta">
          <span class="post-author"><img src="{{author.image}}" alt="{{author.name}}"/>{{author}}</span>
          {{#if tags}}
            <span class="fa fa-tags post-tags"></span>
            {{tags separator=" &bull; "}}
          {{/if}}
          <span class="datetime"><span class="fa fa-clock-o"></span> {{date format='DD MMM YYYY'}}</span>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <article class="{{post_class}}">
          <div class="post-content">{{content}}</div>
          <footer class="post-footer">
            <div class="post-share">
              <a class="btn-twitter" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"
                 onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                <span class="fa fa-twitter"></span> Twitter
              </a>
              <a class="btn-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                 onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                <span class="fa fa-facebook"></span> Facebook
              </a>
              <a class="btn-gplus" href="https://plus.google.com/share?url={{url absolute="true"}}"
                 onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                <span class="fa fa-google-plus"></span> Google+
              </a>
            </div>
          </footer>
        </article>
      </div>
    </div>
  </div>

  <section class="author js-animate non-visible animated" data-animate="zoomIn">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="post-author">
            {{#if author.image}}
              <div class="post-author-image">
                <img src="{{author.image}}" alt="{{author.name}}"/>
              </div>
            {{/if}}
            <h3>{{author}}</h3>
            <p>{{author.bio}}</p>
            <ul class="post-author-meta clearfix">
              {{#if author.location}}<li><span class="fa fa-map-marker"></span> {{author.location}}</li>{{/if}}
              {{#if author.website}}<li><span class="fa fa-link"></span>  <a href="{{author.website}}">{{author.website}}</a></li>{{/if}}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="comments">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div id="disqus_thread"></div>
        </div>
      </div>
    </div>
  </section>
{{/post}}
